<Window x:Class="Foodiet.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Foodiet"
        mc:Ignorable="d"
        Title="LoginWindow" Height="364" Width="439">
    <Grid>
        <Label x:Name="label_welcome" Content="Welcome" HorizontalAlignment="Center" Height="34" Margin="0,56,0,0" VerticalAlignment="Top" Width="114" FontSize="20" FontWeight="Bold" FontFamily="Arial Black"/>
        <TextBox x:Name="tb_username" HorizontalAlignment="Center" VerticalContentAlignment="Center" Height="34" Margin="0,119,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="179" TextAlignment="Center"/>
        <PasswordBox x:Name="tb_password" HorizontalAlignment="Center" Height="34" Margin="0,174,0,0"  VerticalAlignment="Top" Width="179" VerticalContentAlignment="Center" TextBlock.TextAlignment="Center" />
        <Button x:Name="button_signup" Content="Sign up" HorizontalAlignment="Center" Height="36" Margin="130,240,0,0" VerticalAlignment="Top" Width="49" Click="button_signup_Click"/>
        <Button x:Name="button_login" Content="Login" HorizontalAlignment="Center" Height="36" Margin="-60,240,0,0" VerticalAlignment="Top" Width="114" Click="button_login_Click"/>
    </Grid>
</Window>
